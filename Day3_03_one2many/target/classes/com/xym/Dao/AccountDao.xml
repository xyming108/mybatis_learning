<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xym.Dao.AccountDao">
    <!--配置查询所有-->
    <select id="findAll" resultType="com.xym.domain.Account">
        select * from account
    </select>

    <!--查询所有，同时包含用户名和地址信息-->
    <select id="findAllAccount" resultType="com.xym.domain.AccountUser">
        select a.*, u.username, u.address from account a, user u where a.uid = u.id
    </select>

</mapper>
